<UserControl x:Class="CjClutter.ObjLoader.Viewer.OpenGlUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:OpenTK="clr-namespace:OpenTK;assembly=OpenTK.GLControl" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <WindowsFormsHost>
        <OpenTK:GLControl 
            x:Name="glControl"
            Load="OnGlControlLoad"
            Paint="OnGlControlPaint"
            Resize="OnGlControlResize" />
    </WindowsFormsHost>
</UserControl>
